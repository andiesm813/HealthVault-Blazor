<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IgniteUI.Blazor" Version="22.2.50" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Shared/MainLayout.razor.css" CssScope="master-view-scope" />
    <None Update="Pages/Home.razor.css" CssScope="home-scope" />
    <None Update="Pages/Medications.razor.css" CssScope="medications-scope" />
    <None Update="Pages/HealthIndicators.razor.css" CssScope="health-indicators-scope" />
    <None Update="Pages/Appointments.razor.css" CssScope="appointments-scope" />
    <None Update="Pages/Profile.razor.css" CssScope="profile-scope" />
    <None Update="Pages/Emergency.razor.css" CssScope="emergency-scope" />
  </ItemGroup>

</Project>
